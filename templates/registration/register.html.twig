          {{ form_row(registrationForm.agreeTerms) }}
        </div>
        <input type="submit" class="fadeIn fourth btn-register btn-5" value="S'inscrire">
    {{ form_end(registrationForm) }}
    <a href="{{ path('app_login') }}">
      <input type="button" class="fadeIn fourth btn-login btn-5" value="J'ai deja un compte">
    </a>

    <!-- Remind Passowrd 
    <div id="formFooter">
      <a class="underlineHover" href="index">Retour au site</a>
    </div>
-->
  </div>
</div>

   
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('inscription') }}
{% endblock %}



