{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('login') }}
{% endblock %}

{% block body %}

<form method="post">

        <div class="wrapper fadeInDown">
        <div id="formContent">
            <!-- Tabs Titles -->

            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    Vous éte connecté en tant que {{ app.user.username }} <a href="{{ path('app_logout') }}">Se déconnecter</a>
                </div>
            {% endif %}


            <!-- Icon -->
            <div class="fadeIn first">
            <img src="https://s3.amazonaws.com/media-p.slid.es/uploads/772582/images/4220800/api-platform-logo-500x500.png" id="icon" alt="User Icon" />
            <h1 class="text-center">Connexion</h1>
            </div>

            <!-- Login Form -->
            <form>
            <input type="text" id="inputUsername" value="{{ last_username }}" class="fadeIn second" name="username" required autofocus placeholder="Nom de compte">
            <input type="password" id="password" class="fadeIn third" name="password" placeholder="Mot de passe">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            
            <input type="submit" class="fadeIn fourth btn-login" value="Se connecter">

            <a href="{{ path('app_register') }}">
            <input type="button" class="fadeIn fourth btn-register" value="S'inscrire">
            </a>

            <!-- Remind Passowrd 
            <div id="formFooter">
            <a class="underlineHover" href="#">Retour au site</a>
            </div>
            -->
        </div>
        </div>
</form>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('login') }}
{% endblock %}
